package main

import (
	mylog "mylog2"

	"xchain-go/common"
	"xchain-go/core"
)

const dbFile = "xchain.db"

var NodeArr = make([]Node, 10)

func main() {
	prefix := "XChain-Go"
	common.InitLog(prefix)

	common.Logger.SetLevel(mylog.DebugLevel)         //设置显示log等级
	common.Logger.SetFlags(mylog.LshortTextNotation) //DEBUG,INFO,ERROR这些字段的显示模式
	common.Logger.SetFormatter(mylog.TextFormat)

	bc := &core.BlockChain{[]byte{}, nil}
	cli := CLI{bc}
	cli.Run()

}
